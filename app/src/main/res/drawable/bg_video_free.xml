<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item
        android:left="5dp"
        android:top="5dp">
        <shape>
            <solid android:color="#CACACA" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:bottom="5dp"
        android:right="5dp">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#E91E63"
                android:startColor="#BC6986" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>